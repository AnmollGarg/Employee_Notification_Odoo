<odoo>
    <data noupdate="1">
        <record id="mail_template_employee_birthday" model="mail.template">
            <field name="name">Employee Birthday Notification</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Happy Birthday, ${object.name}!</field>
            <field name="email_to">${object.work_email}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${object.name},</p>
                    <p>Happy Birthday! Wishing you a wonderful year ahead.</p>
                ]]>
            </field>
        </record>
        <record id="mail_template_employee_anniversary" model="mail.template">
            <field name="name">Employee Anniversary Notification</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Happy Work Anniversary, ${object.user_id.login}!</field>
            <field name="email_to">${object.work_email}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${object.user_id.login},</p>
                    <p>Congratulations on your work anniversary!</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>