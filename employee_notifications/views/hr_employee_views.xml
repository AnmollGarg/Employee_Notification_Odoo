<odoo>
    <record id="view_employee_notification" model="ir.ui.view">
        <field name="name">hr.employee.form.notification</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group/group[2]" position="inside">
                <field name="employee_date_of_joining"/>
            </xpath>
        </field>
    </record>
</odoo>
 